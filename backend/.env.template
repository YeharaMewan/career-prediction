# ====================================
# Career Prediction System Environment Variables
# ====================================
# Copy this file to .env and fill in your actual values

# ====================================
# REQUIRED VARIABLES
# ====================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# API SERVER CONFIGURATION
# ====================================

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Environment Type
ENVIRONMENT=development
# Options: development, staging, production

# ====================================
# LOGGING CONFIGURATION
# ====================================

# Logging Level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log File Path (optional)
LOG_FILE=logs/career_prediction.log

# ====================================
# DATABASE CONFIGURATION
# ====================================

# Session Storage (SQLite for development)
DATABASE_URL=sqlite:///career_sessions.db

# For production, you might use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/career_db

# ====================================
# LANGGRAPH CONFIGURATION
# ====================================

# LangGraph Cloud Configuration (if deploying to LangGraph Cloud)
LANGGRAPH_API_KEY=your_langgraph_api_key_here
LANGGRAPH_DEPLOYMENT_ID=your_deployment_id_here

# ====================================
# LANGSMITH CONFIGURATION
# ====================================

# LangSmith Configuration (for monitoring and debugging)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=career-planning-system
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ====================================
# MODEL CONFIGURATION
# ====================================

# Default Model Settings
DEFAULT_MODEL=gpt-4-mini
DEFAULT_TEMPERATURE=0.1
MODEL_TIMEOUT=60

# Model-specific overrides
USER_PROFILER_MODEL=gpt-4-mini
USER_PROFILER_TEMPERATURE=0.2

MAIN_SUPERVISOR_MODEL=gpt-4-mini
MAIN_SUPERVISOR_TEMPERATURE=0.1

# ====================================
# CONVERSATION CONFIGURATION
# ====================================

# RIASEC Assessment Settings
RIASEC_CONFIDENCE_THRESHOLD=0.7
MIN_QUESTIONS_PER_STATE=2
MAX_CONVERSATION_TURNS=20

# Career Prediction Settings
TARGET_CAREER_PREDICTIONS=5
MIN_PREDICTION_CONFIDENCE=0.6

# ====================================
# EXTERNAL SERVICES (OPTIONAL)
# ====================================

# Web Search Configuration (if using external search APIs)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Alternative search providers
BING_SEARCH_API_KEY=your_bing_api_key_here
SERPAPI_API_KEY=your_serpapi_key_here

# ====================================
# SECURITY CONFIGURATION
# ====================================

# Session Security
SESSION_SECRET_KEY=your_secret_key_for_sessions_here
SESSION_TIMEOUT=3600

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ====================================
# CORS CONFIGURATION
# ====================================

# Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# For production, specify your domain:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================
# MONITORING & ANALYTICS (OPTIONAL)
# ====================================

# Application Performance Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Analytics
ANALYTICS_API_KEY=your_analytics_key_here

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ====================================
# DEVELOPMENT/TESTING CONFIGURATION
# ====================================

# Development Flags
DEBUG=true
RELOAD=true
TEST_MODE=false
MOCK_APIS=false

# Testing Configuration
RUN_INTEGRATION_TESTS=false
TEST_DATABASE_URL=sqlite:///test_career_sessions.db

# ====================================
# PRODUCTION CONFIGURATION
# ====================================

# Production Security
SSL_KEYFILE=
SSL_CERTFILE=

# Production Performance
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=30

# Production Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# ====================================
# BACKUP & PERSISTENCE
# ====================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_LOCATION=backups/

# Data Retention
SESSION_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# ====================================
# FEATURE FLAGS
# ====================================

# Enable/Disable Features
ENABLE_CAREER_PREDICTION=true
ENABLE_RIASEC_ASSESSMENT=true
ENABLE_CONVERSATION_HISTORY=true
ENABLE_SESSION_PERSISTENCE=true
ENABLE_ANALYTICS=false

# Experimental Features
ENABLE_ADVANCED_PROFILING=false
ENABLE_ML_CAREER_MATCHING=false
ENABLE_REAL_TIME_UPDATES=false

# ====================================
# CUSTOM CONFIGURATION
# ====================================

# Custom prompts directory
CUSTOM_PROMPTS_DIR=config/custom_prompts/

# Custom career database
CUSTOM_CAREER_DB=data/custom_careers.json

# Custom RIASEC weights
CUSTOM_RIASEC_WEIGHTS=data/riasec_weights.json

# ====================================
# NOTES
# ====================================

# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your actual API keys and configurations
# 3. Never commit your .env file to version control
# 4. Restart the server after changing environment variables
# 5. For production, use secure secret management systems

# Required for basic functionality:
# - OPENAI_API_KEY

# Recommended for production:
# - Set DEBUG=false
# - Configure SSL certificates
# - Set up proper CORS origins
# - Enable monitoring and logging
# - Configure database for persistence